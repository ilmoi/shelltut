# common.lib
# note no #! /bin/sh as this should not spawn an extra shell
# it's not the end of the world ot have one, but clearer not to!

STD_MSG="About to rename some files"

rename()
{
    # expectes to be called as: rename .txt .bak
    FROM=$1
    TO=$2

    for i in *$FROM
    do
        j=`basename $i $FROM`
        mv $i ${j}$TO
    done
}
